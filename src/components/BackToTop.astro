---
import chevron from "../assets/chevron-up.svg";
---

<a
  class="back-to-top"
  href="#"
  ><img
    src={chevron}
    alt="chevron"
  />
</a>

<style>
  .back-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    display: grid;
    place-items: center;

    width: 50px;
    height: 50px;

    border-radius: 100%;
    border: none;

    background-color: #fb9333;
    font-size: 2rem;

    cursor: pointer;
    z-index: 100;

    opacity: 0;
    pointer-events: none;
    transition: all 0.5s ease;
  }

  .reveal {
    opacity: 1;
    pointer-events: all;
  }

  .back-to-top a {
    color: #fff;
  }
</style>

<script>
  const backToTop = document.querySelector(".back-to-top");

  backToTop?.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>
