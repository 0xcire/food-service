---
import MenuCard from "./MenuCard.astro";

import { items } from "../../data/data";
---

<section
  id="menu"
  class="menu"
>
  <p class="menu__banner menu_el hidden">MENU YOU'LL FALL IN LOVE WITH</p>
  <h1 class="menu__title menu_el hidden">
    ENJOY THE BEST MENU AND GET <span>DISCOUNTS</span> AVAILABLE
  </h1>
  <div class="menu__items">
    {
      items.map((item) => (
        <MenuCard
          img={item.pic}
          title={item.title}
          price={item.price}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../../styles/common.scss";
  .menu {
    padding: 3rem 1rem;

    text-align: center;

    @include devices(lg) {
      padding: 4rem $lg-padding-x;
    }

    @include devices(xl) {
      padding: 4rem $xl-padding-x;
    }

    @include devices(2xl) {
      padding: 4rem $_2xl-padding-x;
    }

    @include devices(3xl) {
      padding: 4rem 0;
      max-width: 1440px;
      margin: 0 auto;
    }

    &__banner,
    &__title span {
      color: #fb9333;
    }

    &__banner {
      font-size: clamp(1.6rem, 2vw, 2rem);
    }

    &__title {
      font-size: clamp(2rem, 3.5vw, 4.8rem);
      line-height: 140%;

      @include devices(lg) {
        width: 60%;
        margin: 0 auto;
      }

      @include devices(xl) {
        width: 70%;
      }
    }

    &__items {
      margin-top: 7rem;

      @include devices(sm) {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 0 1rem;
        width: 100%;
      }
    }
  }

  .menu_el {
    transition: all 0.5s cubic-bezier(0.25, 0.1, 0.29, 1.75);
  }

  .hidden {
    opacity: 0;
    transform: translate(0, 10%);
  }
</style>

<script>
  import observer from "../../utils/observer";

  const menuElements = document.querySelectorAll(".menu_el");
  menuElements.forEach((element) => observer.observe(element));
</script>
