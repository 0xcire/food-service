---
import MenuCard from "./MenuCard.astro";
import menuPic from "../../assets/menu/pexels-dapur-melodi-1109197.webp";
const items = [
  { pic: menuPic, title: "Mini Salad", price: "$2.99" },
  { pic: menuPic, title: "Completed Salad ", price: "$3.99" },
  { pic: menuPic, title: "Red Salad", price: "$4.99" },
];
---

<section
  id="menu"
  class="menu"
>
  <p class="menu__banner">MENU YANG MEMBUATMU JATUH CINTA</p>
  <h1 class="menu__title">
    ENJOY THE BEST MENU AND GET <span>DISCOUNTS</span> AVAILABLE
  </h1>
  <div class="menu__items">
    {
      items.map((item) => (
        <MenuCard
          img={item.pic}
          title={item.title}
          price={item.price}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  .menu {
    padding: 3rem 1rem;

    text-align: center;

    @media screen and (min-width: 1024px) {
      padding: 4rem 5rem;
    }

    @media screen and (min-width: 1280px) {
      padding: 6rem 8rem;
    }

    @media screen and (min-width: 1536px) {
      padding: 10rem 13rem;
    }

    &__banner,
    &__title span {
      color: #fb9333;
    }

    &__banner {
      font-size: 1.6rem;

      @media screen and (min-width: 1280px) {
        font-size: 2rem;
      }
    }

    &__title {
      @media screen and (min-width: 1024px) {
        font-size: 3.2rem;
        width: 60%;
        margin: 0 auto;
      }
      @media screen and (min-width: 1280px) {
        font-size: 4.8rem;
        width: 70%;
      }
    }

    &__items {
      margin-top: 7rem;

      @media screen and (min-width: 640px) {
        width: 100%;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 0 1rem;
      }
    }
  }
</style>
