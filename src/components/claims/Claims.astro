---
import ClaimCard from "./ClaimCard.astro";

import { claims } from "../../data/data";
---

<section
  id="claims"
  class="claims"
>
  <div class="claims__text claims_el">
    <h1 class="claims__title claims_el hidden">
      why choose us <br /> for <span>your healthy food</span>
    </h1>
    <p class="claims__sub-text claims_el hidden">
      We continue to consistently choose and maintain the quality of the fruit
      served, so that it remains fresh and nutritious when you eat it.
    </p>
  </div>
  <div class="claims__cards">
    {
      claims.map((claims) => (
        <ClaimCard
          img={claims.svg}
          title={claims.title}
          description={claims.description}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../../styles/common.scss";
  .claims {
    padding: 5rem $sm-padding-x;

    @include devices(lg) {
      padding: 5rem $lg-padding-x;
    }

    @include devices(xl) {
      padding: 10rem $xl-padding-x;
    }

    @include devices(2xl) {
      padding: 10rem $_2xl-padding-x;
    }

    &__text {
      @include devices(sm) {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
    }

    &__title {
      text-transform: uppercase;
      font-size: clamp(2rem, 3.5vw, 4.8rem);
      color: #575757;
      line-height: 150%;

      @include devices(lg) {
        flex-basis: 60%;
      }
    }

    &__title span {
      color: #fb9333;
    }

    &__sub-text {
      font-size: 1.6rem;
      font-size: clamp(1.6rem, 2vw, 2rem);
      line-height: clamp(120%, 3vw, 4rem);
      color: #828282;

      @include devices(sm) {
        flex-basis: 50%;
      }

      @include devices(lg) {
        flex-basis: 40%;
      }
    }

    &__cards {
      margin-top: 6rem;

      @include devices(sm) {
        display: flex;
        flex-wrap: wrap;
        gap: 4rem;
        justify-content: space-between;
      }
    }
  }

  .claims_el {
    transition: all 0.5s cubic-bezier(0.25, 0.1, 0.29, 1.75);
  }

  .hidden {
    opacity: 0;
    transform: translate(0, 7%);
  }
</style>

<script>
  import observer from "../../utils/observer";

  const claimsElements = document.querySelectorAll(".claims_el");
  claimsElements.forEach((element) => {
    observer.observe(element);
  });
</script>
