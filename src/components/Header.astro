<header class="header">
  <h1 class="header__title">
    <a
      class="header__title-link"
      href="#"
      ><span class="header__title-jez">jez</span>salad</a
    >
  </h1>

  <nav class="header__nav header__nav-desktop">
    <a
      href="#"
      class="header__nav-link"
      >Menu</a
    >
    <a
      href="#"
      class="header__nav-link"
      >Contact</a
    >
    <a
      href="#"
      class="header__nav-link"
      >About Us</a
    >
  </nav>
  <button class="header__sign-up header__sign-up-desktop">Sign Up</button>

  <button
    class="hamburger hamburger--slider header__hamburger"
    type="button"
  >
    <span class="hamburger-box">
      <span class="hamburger-inner"></span>
    </span>
  </button>

  <div class="header__nav-wrapper">
    <nav class="header__mobile-nav">
      <a
        href="#"
        class="header__nav-link mobile-link"
        >Menu</a
      >
      <a
        href="#"
        class="header__nav-link mobile-link"
        >Contact</a
      >
      <a
        href="#"
        class="header__nav-link mobile-link"
        >About Us</a
      >
    </nav>
    <button class="header__sign-up header__sign-up-mobile mobile-link"
      >Sign Up</button
    >
  </div>
</header>

<style lang="scss">
  @import "../styles/common.scss";

  .header {
    position: relative;

    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 0 $sm-padding-x;
    height: $header-height;

    @include devices(lg) {
      padding: 0 $lg-padding-x;
    }
    @include devices(xl) {
      padding: 0 $xl-padding-x;
    }
    @include devices(2xl) {
      padding: 0 $_2xl-padding-x;
    }

    &__title {
      font-size: clamp(1.8rem, 2vw, 2.4rem);
      font-weight: 700;
      text-transform: uppercase;

      &-link {
        text-decoration: none;
        color: #585858;
      }

      &-jez {
        color: #fb9333;
        margin-right: 1rem;
      }
    }

    &__hamburger,
    &__nav-wrapper,
    &__mobile-nav,
    &__sign-up-mobile {
      @include devices(sm) {
        display: none;
      }
    }

    &__nav-desktop,
    &__sign-up-desktop {
      @include devices(max-sm) {
        display: none;
      }
    }

    &__sign-up {
      padding: 1.5rem 3rem;
      max-width: 150px;

      border: none;
      border-radius: 100px;

      background-color: #fb9333;
      color: #fff;
      font-size: 1.6rem;

      cursor: pointer;

      @includes devices(sm) {
        margin: 0;
        height: 60%;
      }
    }

    &__nav-wrapper {
      position: absolute;
      top: 100%;
      right: 0;

      display: flex;
      flex-direction: column;
      justify-content: center;

      width: 100%;
      height: calc(100svh - #{$header-height});

      text-align: center;

      background-color: #f6f6f6;

      overflow: hidden;
      opacity: 0;
      transform: scaleX(0);
      transform-origin: center right;
      transition: all 0.2s ease-in-out;

      &-show {
        transform: scaleX(100%);
        opacity: 1;
      }
    }

    &__mobile-nav {
      display: flex;
      flex-direction: column;
      align-items: center;

      margin-bottom: 4rem;
    }

    &__nav-link {
      margin: 1rem 0;
      padding: 1rem 0;
      width: 100%;

      color: #333;
      font-size: 1.6rem;
      text-decoration: none;
    }

    &__nav-desktop &__nav-link {
      margin: 0 1rem;
      padding: 1rem;
    }

    &__sign-up-mobile {
      display: block;
      margin: 0 auto;
    }
  }
</style>

<script>
  const hamburger = document.querySelector(".hamburger");
  const navWrapper = document.querySelector(".header__nav-wrapper");
  const mobileNavLinks = document.querySelectorAll(
    ".mobile-link"
  ) as NodeListOf<Element>;

  function toggleClasses() {
    hamburger?.classList.toggle("is-active");
    navWrapper?.classList.toggle("header__nav-wrapper-show");

    if (hamburger?.classList.contains("is-active")) {
      document.body.style.overflow = "hidden";
    } else {
      document.body.style.overflow = "unset";
    }
  }

  hamburger?.addEventListener("click", () => {
    toggleClasses();
  });

  for (let i = 0; i < mobileNavLinks.length; i++) {
    mobileNavLinks[i].addEventListener("click", function () {
      toggleClasses();
    });
  }
</script>
