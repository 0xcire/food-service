---
import "../styles/main.scss";
---

<header class="header">
  <h1 class="header__title">
    <a class="header__title-link" href="#"><span class="header__title-jez">jez</span>salad</a>
  </h1>

  <nav class="header__nav header__nav-desktop">
    <a href="#" class="header__nav-link">Menu</a>
    <a href="#" class="header__nav-link">Contact</a>
    <a href="#" class="header__nav-link">About Us</a>
  </nav>
  <button class="header__sign-up header__sign-up-desktop">Sign Up</button>

  <button class="hamburger hamburger--slider header__hamburger" type="button">
    <span class="hamburger-box">
      <span class="hamburger-inner"></span>
    </span>
  </button>

  <div class="header__nav-wrapper">
    <nav class="header__mobile-nav">
      <a href="#" class="header__nav-link mobile-link">Menu</a>
      <a href="#" class="header__nav-link mobile-link">Contact</a>
      <a href="#" class="header__nav-link mobile-link">About Us</a>
    </nav>
    <button class="header__sign-up header__sign-up-mobile mobile-link">Sign Up</button>
  </div>
</header>

<style lang="scss">
  $header-height: 85px;

  .header {
    position: relative;

    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 0 1rem;
    height: $header-height;

    @media screen and (min-width: 1024px) {
      padding: 0 5rem;
    }

    @media screen and (min-width: 1280px) {
      padding: 0 8rem;
    }

    @media screen and (min-width: 1536px) {
      padding: 0 13rem;
    }

    &__title {
      font-weight: 400;
      font-size: 24px;

      &-link {
        text-decoration: none;
        color: #000;
      }

      &-jez {
        color: orange;
        font-weight: 700;
        margin-right: 1rem;
      }
    }

    &__hamburger {
      @media screen and (min-width: 640px) {
        display: none;
      }
    }

    &__nav-desktop,
    &__sign-up-desktop {
      @media screen and (max-width: 640px) {
        display: none;
      }
    }

    &__sign-up {
      padding: 1.5rem 3rem;
      max-width: 150px;

      border: none;
      border-radius: 100px;

      background-color: #fb9333;
      color: #fff;
      font-size: 1.6rem;

      cursor: pointer;

      @media screen and (min-width: 640px) {
        margin: 0;
        height: 60%;
      }
    }

    &__nav-wrapper {
      position: absolute;
      top: 100%;
      left: 0;

      display: flex;
      flex-direction: column;
      justify-content: center;

      width: 100%;
      height: calc(100svh - #{$header-height});

      text-align: center;

      background-color: #f6f6f6;

      opacity: 0;
      transform: translate(100%, 0);
      transition: all 0.25s ease-in-out;

      @media screen and (min-width: 640px) {
        display: none;
      }

      &-show {
        opacity: 1;
        transform: translate(0, 0);
      }
    }

    &__mobile-nav {
      display: flex;
      flex-direction: column;
      align-items: center;

      margin-bottom: 4rem;
    }

    &__nav-link {
      margin: 1rem 0;
      padding: 1rem 0;
      width: 100%;

      color: #333;
      font-size: 1.6rem;
      text-decoration: none;

      @media screen and (min-width: 640px) {
        margin: 0 1rem;
        padding: 1rem;
      }
    }

    &__sign-up-mobile {
      display: block;
      margin: 0 auto;
    }

    &__mobile-nav,
    &__sign-up-mobile {
      @media screen and (min-width: 640px) {
        display: none;
      }
    }
  }
</style>

<script>
  let documentWidth = window.innerWidth;
  const hamburger = document.querySelector(".hamburger");
  const navWrapper = document.querySelector(".header__nav-wrapper");
  const mobileNavLinks = document.querySelectorAll(".mobile-link") as NodeListOf<Element>;

  function toggleClasses() {
    hamburger?.classList.toggle("is-active");
    navWrapper?.classList.toggle("header__nav-wrapper-show");
  }

  hamburger?.addEventListener("click", function (this: HTMLButtonElement) {
    this.classList.toggle("is-active");
    navWrapper?.classList.toggle("header__nav-wrapper-show");
  });

  for (let i = 0; i < mobileNavLinks.length; i++) {
    mobileNavLinks[i].addEventListener("click", function () {
      toggleClasses();
    });
  }
</script>
