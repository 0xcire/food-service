---
import industrySvg from "../assets/claims/indsutry.svg";
import oneSvg from "../assets/claims/one.svg";
import trophySvg from "../assets/claims/trophy.svg";
import ClaimCard from "./ClaimCard.astro";

const claims = [
  {
    svg: industrySvg,
    title: "Own fruit orchard",
    description:
      "Langsung dari Kebun Sendiri yang tersebar di setiap provinsi yang memiliki cabang toko Jez Salad.",
  },
  {
    svg: oneSvg,
    title: "#1 Healthy Fruit Salad",
    description:
      "The pioneer of healthy fruit salads that are delicious & suitable for all people with the best quality assurance",
  },
  {
    svg: trophySvg,
    title: "100 Top Brand",
    description:
      "We are one of the best brands in the Food and Beverage sector in Indonesia.",
  },
];
---

<section
  id="claims"
  class="claims"
>
  <div class="claims__text">
    <h1 class="claims__title">
      why choose us <br /> for <span>your healthy food</span>
    </h1>
    <p class="claims__sub-text">
      We continue to consistently choose and maintain the quality of the fruit
      served, so that it remains fresh and nutritious when you eat it.
    </p>
  </div>
  <div class="claims__cards">
    {
      claims.map((claims) => (
        <ClaimCard
          img={claims.svg}
          title={claims.title}
          description={claims.description}
        />
      ))
    }
  </div>
</section>

<style lang="scss">
  .claims {
    margin-top: 5rem;
    padding: 5rem 1rem;

    @media screen and (min-width: 1024px) {
      padding: 5rem 5rem;
    }

    @media screen and (min-width: 1280px) {
      padding: 10rem 8rem;
    }

    @media screen and (min-width: 1536px) {
      padding: 10rem 13rem;
    }

    &__text {
      @media screen and (min-width: 640px) {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
    }

    &__title {
      text-transform: uppercase;
      color: #575757;
      line-height: 150%;

      @media screen and (min-width: 1024px) {
        flex-basis: 60%;
        font-size: 3.2rem;
      }
      @media screen and (min-width: 1280px) {
        font-size: 4.8rem;
      }
    }

    &__title span {
      color: #fb9333;
    }

    &__sub-text {
      font-size: 1.6rem;
      color: #828282;

      @media screen and (min-width: 640px) {
        flex-basis: 50%;
      }

      @media screen and (min-width: 1024px) {
        flex-basis: 40%;
        line-height: 3rem;
      }
      @media screen and (min-width: 1280px) {
        font-size: 2rem;
      }
    }

    &__cards {
      margin-top: 6rem;

      @media screen and (min-width: 640px) {
        display: flex;
        flex-wrap: wrap;
        gap: 4rem;
        justify-content: space-between;
      }
    }
  }
</style>
