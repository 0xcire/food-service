---
import Stat from "./Stat.astro";
import heroSvg from "../assets/hero.svg";
const stats = [
  { category: "Customers", amount: "5,000+" },
  { category: "Deliveries", amount: "8,000+" },
  { category: "Ratings", amount: "1,000+" },
];
---

<section id="hero" class="hero">
  <div class="hero__left">
    <div class="hero__claim">
      <p>#1 Best Healthy Salad</p>
    </div>
    <h1 class="hero__title"><span>Skip</span> The Diet, <br /> Just Eat Healthy <br /> With Jez Salad</h1>
    <p class="hero__sub-text">Imagine you don't need a diet because we provide healthy and delicious food for you!</p>
    <button class="hero__cta">Order Food</button>
    <div class="hero__stats">
      {stats.map((stat) => <Stat category={stat.category} amount={stat.amount} />)}
    </div>
  </div>
  <div class="hero__right">
    <img class="hero__img" src={heroSvg} alt="hero-img" />
  </div>
</section>

<style lang="scss">
  .hero {
    margin-top: 8rem;
    padding: 0 1rem;

    @media screen and (min-width: 640px) {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    @media screen and (min-width: 1024px) {
      padding: 0 5rem;
    }

    @media screen and (min-width: 1280px) {
      padding: 0 8rem;
    }

    @media screen and (min-width: 1536px) {
      padding: 0 13rem;
    }

    &__left {
      @media screen and (min-width: 640px) {
        flex-basis: 50%;
      }

      @media screen and (min-width: 1536px) {
        flex-basis: 50%;
      }
    }

    &__claim {
      max-width: 215px;

      padding: 0.5rem 0;

      border-radius: 10rem;

      color: #fb9333;
      background-color: #fff0dc;
      font-size: 1.6rem;
      text-align: center;
    }

    &__title {
      font-size: 4rem;
      color: #575757;

      @media screen and (min-width: 1280px) {
        font-size: 5.4rem;
      }

      @media screen and (min-width: 1536px) {
        font-size: 7.2rem;
      }
    }

    &__title span {
      color: #fb9333;
    }

    &__sub-text {
      font-size: 1.6rem;
    }

    &__cta {
      padding: 1.5rem 3rem;
      max-width: 150px;

      border: none;
      border-radius: 100px;

      background-color: #fb9333;
      color: #fff;
      font-size: 1.6rem;

      cursor: pointer;
    }

    &__stats {
      @media screen and (min-width: 640px) {
        display: flex;
      }
    }

    &__right {
      width: 70%;
      margin: -40% 0 0 auto;

      @media screen and (min-width: 640px) {
        margin: 0;
        width: 50%;
      }
    }

    &__img {
      width: 100%;
      max-height: 75vh;
    }
  }
</style>
